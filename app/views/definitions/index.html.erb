<p id="notice"><%= notice %></p>

<h1>Listing Definitions</h1>

<%= form_tag(search_definitions_path, method: "get") do %>
<%= text_field_tag :search, nil, placeholder: "Search for Words" %>
<%= submit_tag "Search"%>
<% end %>

<table class="table-bordered">
  <thead>
    <tr>
      <th>Word</th>
      <th>Meaning</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @definitions.each do |definition| %>
      <tr>
        <td><%= definition.word %></td>
        <td><%= definition.meaning %></td>
        <td><%= link_to 'Show', definition %></td>
        <td><%= link_to 'Edit', edit_definition_path(definition) %></td>
        <td><%= link_to 'Destroy', definition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

